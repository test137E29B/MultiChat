{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2018",
    "module": "commonjs",
    "allowJs": false,
    "checkJs": false,
    "sourceMap": true,
    "outDir": "bin",
    "removeComments": true,
    "noEmit": false,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "bin"
  ]
}